<div class='m-10 '>
  <p style="color: green"><%= notice %></p>
  <div class="my-10">
    <%= render @task %>
    
  </div>
  <div class='flex'>
    <%= link_to "Edit this task", edit_task_path(@task), class: "text-blue-600 hover:text-blue-900 font-bold" %> &nbsp;|&nbsp;
      <%= button_to "Destroy this task", @task, method: :delete,  class: "text-red-600 hover:text-red-900 font-bold" %> &nbsp;|&nbsp;
      <%= link_to "Back to tasks", tasks_path, class: "text-green-600 hover:text-green-900 font-bold" %>
  </div>
</div>

